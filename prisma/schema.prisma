generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Domain {
  id           String    @id @default(uuid())
  name         String    @unique
  enabled      String
  description  String?
  created      DateTime? @default(now())
  updated      DateTime? @updatedAt
  synchronised DateTime?
  updated_by   String
  home_switch  String
  menu_id_id   String?   @db.Uuid
  portal_name  String    @unique

  @@map("pbx_domains")
}

model Extension {
  id                         String  @id @default(uuid())
  extension                  String
  effective_caller_id_name   String?
  effective_caller_id_number String?
  call_group                 String?
  user_context               String?
  enabled                    String

  @@map("pbx_extensions")
}

model EmailTemplate {
  id          String  @id @default(uuid())
  language    String
  category    String
  subcategory String
  enabled     String
  description String?

  @@map("pbx_email_templates")
}

model Gateway {
  id          String  @id @default(uuid())
  gateway     String
  proxy       String
  context     String
  enabled     String
  description String?

  @@map("pbx_gateways")
}